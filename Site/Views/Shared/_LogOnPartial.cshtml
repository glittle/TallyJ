@using TallyJ.Code.Session
@if (Request.IsAuthenticated)
{
    if (ActionName != "RoleCall")
    {
    <div class="MiniDash">
        @if (ControllerName != "Dashboard")
        {
            <div>
                @ActionLink2("Dashboard", "Index", "Dashboard")
            </div>
            <div>
                @ActionLink2("Setup Election", "Index", "Setup")
                @ActionLink2("Import Names", "ImportExport", "Setup")
            </div>
            <div>
                @ActionLink2("Front Desk", "FrontDesk", "Before")
                @ActionLink2("Manage People", "People", "Setup")
                @ActionLink2("Role Call", "RoleCall", "Before")
            </div>
            <div>
                @ActionLink2("Enter Ballots", "Index", "Ballots")
                @ActionLink2("Monitor Progress", "Monitor", "After")
                @ActionLink2("Analyze Results", "Analyze", "After")
            </div>
            <div>
                @ActionLink2("Present Results", "Presenter", "After")
                @ActionLink2("Generate Reports", "Reports", "After")
            </div>
        }
        <div>
            @Html.ActionLink("Log Off", "LogOff", "Account")
            @if (UserSession.IsKnownTeller)
            {
                @ActionLink2("Switch Elections", "ChooseElection", "Dashboard")
                @ActionLink2(User.Identity.Name, "ChangePassword", "Account")
            }
        </div>
    </div>
    }
}
else
{
    <ul>
        <li>@ActionLink2("Home", "Index", "Public")</li>
        <li>@ActionLink2("Register", "Register", "Account")</li>
        <li>@ActionLink2("Log on", "LogOn", "Account")</li>
        @*  
      , routeValues: null, htmlAttributes: new
   {
     id = "logonLink",
     data_dialog_title = "Identification"
   }*@
    </ul>
}
